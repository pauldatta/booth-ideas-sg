---
import Layout from '../layouts/Layout.astro';

const usernames = [
  { service: 'GitHub', username: 'gemini-cli' },
  { service: 'Google', username: 'gemini-cli' },
  { service: 'Twitter', username: 'gemini-cli' },
];
---

<Layout title="Username Manager">
  <main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Username Manager</h1>

    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-2">Add New Username</h2>
      <form class="flex gap-4">
        <input type="text" placeholder="Service" class="input input-bordered w-full max-w-xs" />
        <input type="text" placeholder="Username" class="input input-bordered w-full max-w-xs" />
        <button type="submit" class="btn btn-primary">Add</button>
      </form>
    </div>

    <div>
      <h2 class="text-xl font-semibold mb-2">Stored Usernames</h2>
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr>
              <th>Service</th>
              <th>Username</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {usernames.map(user => (
              <tr>
                <td>{user.service}</td>
                <td>{user.username}</td>
                <td>
                  <button class="btn btn-sm btn-outline btn-error">Delete</button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </main>
</Layout>