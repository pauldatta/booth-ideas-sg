---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import RecommendationFilters from '../components/RecommendationFilters.astro';
import Playlist from '../components/Playlist.astro';
---

<Layout title="LinguaTune - Discover New Music">
  <Header />
  <main>
    <div class="container">
      <RecommendationFilters />
      <Playlist />
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    padding: 2rem 0;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 2rem;
  }
</style>