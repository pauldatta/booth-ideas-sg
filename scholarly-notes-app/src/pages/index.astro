---
import Layout from '../layouts/Layout.astro';
import NoteCard from '../components/NoteCard';
---

<Layout title="ScholarlyNotes - Dashboard">
	<h1 class="text-3xl font-bold mb-6">Dashboard</h1>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		<NoteCard client:load title="History Lecture 1" excerpt="Notes on the Roman Empire..." subject="History" />
		<NoteCard client:load title="Calculus Chapter 2" excerpt="Derivatives and their applications..." subject="Math" />
		<NoteCard client:load title="Biology Lab Report" excerpt="Photosynthesis experiment results..." subject="Science" />
	</div>
</Layout>