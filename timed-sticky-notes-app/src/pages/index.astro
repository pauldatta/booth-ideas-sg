---
import Layout from '../layouts/Layout.astro';
import StickyNote from '../components/StickyNote.astro';
import Timer from '../components/Timer.astro';
---

<Layout title="Smart Sticky Notes">
	<main>
		<h1>Smart Sticky Notes</h1>
		<div class="notes-container">
			<StickyNote title="Task 1" content="This is the first task." color="yellow">
				<Timer />
			</StickyNote>
			<StickyNote title="Task 2" content="This is the second task." color="pink">
				<Timer />
			</StickyNote>
			<StickyNote title="Task 3" content="This is the third task." color="blue">
				<Timer />
			</StickyNote>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.notes-container {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 1rem;
	}
</style>
