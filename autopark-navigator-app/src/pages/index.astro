import Layout from '../layouts/Layout.astro';
---

<Layout title="AutoPark Navigator">
	<main class="flex flex-col items-center justify-center min-h-screen p-4 text-center">
		<h1 class="text-5xl font-bold mb-4">Welcome to AutoPark Navigator</h1>
		<p class="text-xl mb-8">The smartest way to find your parked car.</p>
		<div class="flex space-x-4">
			<a href="/features" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
				Learn More
			</a>
			<a href="/download" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
				Download
			</a>
		</div>
	</main>
</Layout>