---
import Layout from '../layouts/Layout.astro';
---

<Layout title="AI-Powered Recipe Suggestion App">
  <main class="flex flex-col items-center justify-center min-h-screen p-4 bg-gray-50">
    <header class="text-center">
      <h1 class="text-5xl font-bold text-gray-800">
        Welcome to the Future of Cooking
      </h1>
      <p class="mt-4 text-lg text-gray-600">
        Discover personalized recipes, reduce food waste, and unleash your inner chef with the power of AI.
      </p>
    </header>

    <section class="mt-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-6 bg-white rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-700">Smart Recipe Suggestions</h2>
          <p class="mt-2 text-gray-600">
            Get recipe ideas based on the ingredients you already have.
          </p>
        </div>
        <div class="p-6 bg-white rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-700">Personalized Meal Plans</h2>
          <p class="mt-2 text-gray-600">
            Create weekly meal plans tailored to your dietary needs and preferences.
          </p>
        </div>
        <div class="p-6 bg-white rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold text-gray-700">Grocery List Generator</h2>
          <p class="mt-2 text-gray-600">
            Automatically generate a shopping list from your meal plan.
          </p>
        </div>
      </div>
    </section>

    <footer class="mt-12 text-center">
      <p class="text-gray-500">
        Â© 2025 AI Recipe Suggester. All rights reserved.
      </p>
    </footer>
  </main>
</Layout>