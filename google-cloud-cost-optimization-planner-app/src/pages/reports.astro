---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Reports - Google Cloud Cost Optimizer">
	<h1 class="text-4xl font-bold mb-8">Reports</h1>
	<div class="bg-gray-800 p-6 rounded-lg">
		<h2 class="text-2xl font-bold mb-4">Generate a new report</h2>
		<p class="mb-4">Generate a detailed report of your cloud spending and savings.</p>
		<button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
			Generate Report
		</button>
	</div>
</Layout>
