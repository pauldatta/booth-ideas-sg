---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Dashboard - Google Cloud Cost Optimizer">
	<h1 class="text-4xl font-bold mb-8">Dashboard</h1>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
		<!-- Placeholder for charts and data -->
		<div class="bg-gray-800 p-6 rounded-lg">
			<h2 class="text-2xl font-bold mb-4">Total Spend</h2>
			<p class="text-4xl font-bold">$12,345</p>
		</div>
		<div class="bg-gray-800 p-6 rounded-lg">
			<h2 class="text-2xl font-bold mb-4">Projected Spend</h2>
			<p class="text-4xl font-bold">$13,000</p>
		</div>
		<div class="bg-gray-800 p-6 rounded-lg">
			<h2 class="text-2xl font-bold mb-4">Potential Savings</h2>
			<p class="text-4xl font-bold text-green-500">$2,500</p>
		</div>
		<div class="bg-gray-800 p-6 rounded-lg col-span-1 md:col-span-2 lg:col-span-3">
			<h2 class="text-2xl font-bold mb-4">Spend by Service</h2>
			<!-- Placeholder for a chart -->
			<div class="h-64 bg-gray-700 rounded"></div>
		</div>
	</div>
</Layout>