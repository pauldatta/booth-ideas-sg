---
import Layout from '../layouts/Layout.astro';

const lockers = [
  { id: 1, status: 'available' },
  { id: 2, status: 'occupied' },
  { id: 3, status: 'maintenance' },
  { id: 4, status: 'available' },
  { id: 5, status: 'occupied' },
];
---

<Layout title="Lockers">
	<h1>Locker Management</h1>
	<table>
		<thead>
			<tr>
				<th>Locker ID</th>
				<th>Status</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{lockers.map(locker => (
				<tr>
					<td>{locker.id}</td>
					<td>{locker.status}</td>
					<td>
						<button>Assign</button>
						<button>Unassign</button>
						<button>Mark for Maintenance</button>
					</td>
				</tr>
			))}
		</tbody>
	</table>
</Layout>
<style>
	table {
		width: 100%;
		border-collapse: collapse;
	}
	th, td {
		border: 1px solid white;
		padding: 0.5rem;
	}
	button {
		margin-right: 0.5rem;
	}
</style>