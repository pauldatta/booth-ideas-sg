---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Weekly Budgeting & Spending Tracker">
	<main>
		<h1>Weekly Budgeting & Spending Tracker</h1>
		<div class="container">
			<div class="card">
				<h2>Set Your Weekly Budget</h2>
				<form>
					<label for="budget">Weekly Budget:</label>
					<input type="number" id="budget" name="budget" value="500" />
					<button type="submit">Set Budget</button>
				</form>
			</div>
			<div class="card">
				<h2>Transactions</h2>
				<ul>
					<li>
						<span>Groceries</span>
						<span>$50</span>
					</li>
					<li>
						<span>Entertainment</span>
						<span>$30</span>
					</li>
					<li>
						<span>Transport</span>
						<span>$20</span>
					</li>
				</ul>
			</div>
			<div class="card">
				<h2>Summary</h2>
				<p>Total Spent: <span>$100</span></p>
				<p>Remaining Budget: <span>$400</span></p>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1rem;
	}
	.card {
		background: rgba(255, 255, 255, 0.1);
		padding: 1.5rem;
		border-radius: 0.5rem;
	}
	h2 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 1rem;
	}
	form {
		display: flex;
		flex-direction: column;
	}
	label {
		margin-bottom: 0.5rem;
	}
	input {
		padding: 0.5rem;
		border-radius: 0.25rem;
		border: 1px solid #ccc;
		margin-bottom: 1rem;
	}
	button {
		padding: 0.5rem 1rem;
		border-radius: 0.25rem;
		background: var(--accent);
		color: white;
		border: none;
		cursor: pointer;
	}
	ul {
		list-style: none;
		padding: 0;
	}
	li {
		display: flex;
		justify-content: space-between;
		padding: 0.5rem 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}
</style>