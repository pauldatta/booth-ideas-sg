---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <h1 class="text-3xl font-bold">Dashboard</h1>
  <div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
    <div class="rounded-lg bg-white p-6 shadow-md">
      <h2 class="text-xl font-semibold">Total Spend</h2>
      <p class="mt-2 text-4xl font-bold">$12,345</p>
    </div>
    <div class="rounded-lg bg-white p-6 shadow-md">
      <h2 class="text-xl font-semibold">Potential Savings</h2>
      <p class="mt-2 text-4xl font-bold">$2,345</p>
    </div>
    <div class="rounded-lg bg-white p-6 shadow-md">
      <h2 class="text-xl font-semibold">Active Alerts</h2>
      <p class="mt-2 text-4xl font-bold">3</p>
    </div>
  </div>
</Layout>