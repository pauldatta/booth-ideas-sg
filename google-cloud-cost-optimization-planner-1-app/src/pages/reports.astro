---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <h1 class="text-3xl font-bold">Reports</h1>
  <div class="mt-8">
    <div class="rounded-lg bg-white p-6 shadow-md">
      <h2 class="text-xl font-semibold">Monthly Cost Breakdown</h2>
      <p class="mt-2">Generate a detailed report of your cloud spending for the last month.</p>
      <button class="mt-4 rounded-md bg-blue-500 px-4 py-2 text-white">Generate Report</button>
    </div>
  </div>
</Layout>
