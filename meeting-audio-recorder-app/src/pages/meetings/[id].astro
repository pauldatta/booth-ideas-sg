---
import MainLayout from '../../layouts/MainLayout.astro';

const { id } = Astro.params;

const meeting = {
  id: id,
  title: 'Project Kick-off',
  date: '2025-08-25',
  summary: 'Initial meeting to discuss project goals and timelines.',
  transcription: `
    <p><b>Speaker 1:</b> Welcome everyone to the project kick-off meeting.</p>
    <p><b>Speaker 2:</b> Thanks for having us. We are excited to get started.</p>
    <p><b>Speaker 1:</b> Let's go over the project goals...</p>
  `,
  actionItems: [
    'John to create the project plan.',
    'Jane to set up the development environment.',
    'Peter to schedule the next meeting.',
  ],
};
---

<MainLayout title={meeting.title}>
  <div class="text-white">
    <h1 class="text-3xl font-bold mb-2">{meeting.title}</h1>
    <p class="text-gray-400 mb-4">{meeting.date}</p>

    <div class="bg-gray-800 rounded-lg p-4 mb-8">
      <h2 class="text-2xl font-bold mb-4">Summary</h2>
      <p>{meeting.summary}</p>
    </div>

    <div class="bg-gray-800 rounded-lg p-4 mb-8">
      <h2 class="text-2xl font-bold mb-4">Action Items</h2>
      <ul class="list-disc list-inside">
        {meeting.actionItems.map(item => (
          <li>{item}</li>
        ))}
      </ul>
    </div>

    <div class="bg-gray-800 rounded-lg p-4">
      <h2 class="text-2xl font-bold mb-4">Transcription</h2>
      <div class="prose prose-invert" set:html={meeting.transcription} />
    </div>
  </div>
</MainLayout>
